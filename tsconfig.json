    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "types",
        "allowJs": true,
        "checkJs": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./",
