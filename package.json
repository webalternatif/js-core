{
  "name": "@webalternatif/js-core",
  "version": "1.6.3",
  "type": "module",
  "types": "types/index.d.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "license": "MIT",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build:esm": "babel src --out-dir dist/esm --extensions .js",
    "build:cjs": "cross-env BABEL_ENV=cjs babel src --out-dir dist/cjs --extensions .js",
    "types": "tsc",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs && yarn types",
    "docs": "node scripts/docs.js",
    "prepublishOnly": "yarn build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.26.0",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/preset-env": "^7.26.0",
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jest": "^29.5.14",
    "babel-jest": "^30.2.0",
    "babel-loader": "^9.2.1",
    "cross-env": "^10.1.0",
    "documentation": "^14.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "types",
    "README.md",
    "docs",
    "LICENSE"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
